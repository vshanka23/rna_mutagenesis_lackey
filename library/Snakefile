	output:
		config["DEST"]+"/"+config["BARCODE_SOURCE_PREFIX"].lenfilt.fasta
	params:
		config["LIB_SCRIPT"]+"/3_fastq_to_fasta.sh"
	resources: cpus=2, mem_mb=16000, time_min=14400
	shell:
		"""
		{params} {input} {output}
		"""

rule extract_matching:
	input:
